<?xml version="1.0"?>
<project name="HealthProfileReaderAxis2" basedir="." default="generate.service">

    <property environment="env"/>
    <!-- Remember, update the following to fit your filesystem -->
	
    <!-- <property name="AXIS2_HOME" value="/opt/axis2-1.6.2"/> -->
	<property name="AXIS2_HOME" value="/home/alexander/axis2-1.6.3"/>
	
    <!-- <property name="AXIS2_HOME_TOMCAT" value="/opt/apache-tomcat-7.0.39/webapps/axis2"/> -->
	<property name="AXIS2_HOME_TOMCAT" value="/home/alexander/apache-tomcat-8.0.15/webapps/axis2"/>
	
    <property name="build.dir" value="build"/>

    <path id="axis2.classpath">
        <fileset dir="${AXIS2_HOME}/lib">
            <include name="*.jar"/>
        </fileset>
    </path>

	<target name="compile.service">
		<mkdir dir="${build.dir}"/>
		<mkdir dir="${build.dir}/classes"/>

		<!--First let's compile the classes-->
		<javac debug="on" 
	               fork="true"
	               destdir="${build.dir}/classes" 
	               srcdir="${basedir}/src"
	               classpathref="axis2.classpath">
		</javac>
	</target>

	<target name="generate.wsdl" depends="compile.service">
		<taskdef name="java2wsdl"
	                 classname="org.apache.ws.java2wsdl.Java2WSDLTask"
	                 classpathref="axis2.classpath"/>
		<java2wsdl className="HealthProfileReader"
	                   outputLocation="${build.dir}"
	                   targetNamespace="http://quickstart.samples/"
	                   schemaTargetNamespace="http://quickstart.samples/xsd">
			<classpath>
				<pathelement path="${axis2.classpath}"/>
				<pathelement location="${build.dir}/classes"/>
			</classpath>
		</java2wsdl>
	</target>

	<target name="generate.service" depends="compile.service">
		<!--aar them up -->
		<copy toDir="${build.dir}/classes" failonerror="false">
			<fileset dir="${basedir}/resources">
				<include name="**/*.xml"/>
			</fileset>
		</copy>
		<jar destfile="${build.dir}/HealthProfileReader.aar">
			<fileset excludes="**/Test.class" dir="${build.dir}/classes"/>
		</jar>
		<!-- deploy to axis2 standalone server -->
		<copy file="${build.dir}/HealthProfileReader.aar"
	              toDir="${AXIS2_HOME}/repository/services"
	              overwrite="yes">
		</copy>

		<!-- deploy to axis2 web application deployed in tomcat -->
		<copy file="${build.dir}/HealthProfileReader.aar"
	              toDir="${AXIS2_HOME_TOMCAT}/WEB-INF/services"
	              overwrite="yes">
		</copy>
	</target>

	<target name="remove.service">
		<!-- remove the service from axis2 standalone server -->
		<delete file="${AXIS2_HOME}/repository/services/HealthProfileReader.aar">
		</delete>

		<!-- remove the service from axis2 web application deployed in tomcat -->
		<delete file="${AXIS2_HOME_TOMCAT}/WEB-INF/services/HealthProfileReader.aar">
		</delete>
	</target>

	<target name="clean">
		<delete dir="${build.dir}"/>
	</target>
</project>